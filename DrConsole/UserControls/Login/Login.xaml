<UserControl x:Class="DrConsole.UserControls.Login.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrConsole.UserControls.Login"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <ui:SimpleStackPanel Margin="12" Spacing="12">
        <TextBlock HorizontalAlignment="Left" Height="16" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Height="16" TextWrapping="Wrap" Text="User Name:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBlock HorizontalAlignment="Left" Height="16" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="250"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="31.2" VerticalAlignment="Top" />

    </ui:SimpleStackPanel>
</UserControl>
